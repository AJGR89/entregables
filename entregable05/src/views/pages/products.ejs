<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entregable 05 - AJGR89</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark mb-4">
        <div class="container">
          <a class="navbar-brand" href="/">APP Products</a>
          <a class="btn btn-outline-success" href="/api/productos">View Products</a>
        </div>
      </nav>
    
      <div class="container">
        <% if(products != null) {%>
        <table class="table table-dark table-striped w-auto table-bordered table-hover">
          <thead>
            <tr>
              <th>Nombre</th>
              <th>Precio</th>
              <th>Foto</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach(function(product){%>
              <tr>
                <td><strong><%= product.title %></strong></td>
                <td><%= product.price %></td>
                <td><img src=<%= product.thumbnail %>
                class="rounded  d-block w-25"
                alt=<%= product.title %>
                
                ></td>
              </tr>
              <% }); %>
          </tbody>
        </table>
        <% } else {%>
        <div class="h-100 d-flex align-items-center justify-content-center">
          <div class="text-center text-dark bg-warning">
            <h1>No se encontraron productos</h1>
          </div>
      
        </div>
        <% }%>
    </div>
</body>


</html>